{
  "compileOnSave": false,
  "compilerOptions": { // https://www.typescriptlang.org/docs/handbook/compiler-options.html
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true, // MBL experimental: I added this
    "noUnusedLocals": true, // MBL experimental: I added this
    "noUnusedParameters": true, // MBL experimental: I added this
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
